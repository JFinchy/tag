{
  "name": "tag",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky || true",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "update-check": "node scripts/check-updates.js",
    "update-check:minor": "node scripts/check-updates.js --target minor",
    "update-check:patch": "node scripts/check-updates.js --target patch",
    "update-check:interactive": "node scripts/check-updates.js --interactive",
    "update-deps": "node scripts/check-updates.js --upgrade",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "changeset:version": "changeset version",
    "changeset:publish": "turbo build && changeset publish",
    "changeset:check": "node scripts/check-changesets.js",
    "release": "pnpm build && pnpm changeset:version && pnpm changeset:publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@turbo/gen": "^1.12.4",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-barrel-files": "^1.2.1",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-tree-shaking": "^1.12.2",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-yml": "^1.17.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-check-updates": "^17.1.15",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@8.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.28.1",
    "@cspell/eslint-plugin": "^8.17.5"
  }
}
